{
    "version": 8,
    "configurePresets": [
        {
            "name": "Debug_Clang_18.1.3_x86_64-pc-linux-gnu",
            "displayName": "Debug Clang 18.1.3 x86_64-pc-linux-gnu",
            "generator": "Ninja",
            "description": "Using compilers: CXX = /usr/bin/clang++",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "Release_Clang_18.1.3_x86_64-pc-linux-gnu",
            "displayName": "Release Clang 18.1.3 x86_64-pc-linux-gnu",
            "generator": "Ninja",
            "description": "Using compilers: CXX = /usr/bin/clang++",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "CMAKE_BUILD_TYPE": "Release"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        }
    ]
}